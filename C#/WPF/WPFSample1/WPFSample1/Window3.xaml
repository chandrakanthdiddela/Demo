<Window x:Class="WPFSample1.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window3" Height="300" Width="300">
    <Canvas>
        
        <Rectangle Width="50" Height="70" Fill="Yellow" Canvas.Left="50"></Rectangle>

        <Rectangle Width="50" Height="70" Fill="Red" Canvas.Right="50"></Rectangle>
        <Rectangle Width="50" Height="70" Fill="Blue" Canvas.Bottom="50"></Rectangle>
        <Rectangle Width="50" Height="70" Fill="Violet" Canvas.Right="50" Canvas.Bottom="50"></Rectangle>
        <Ellipse Width="100" Height="70" Fill="AliceBlue" Canvas.Top="100" Canvas.Left="50"></Ellipse>
        <Ellipse Width="100" Height="70" Fill="Violet" Canvas.Top="120" Canvas.Left="70"></Ellipse>
        <Ellipse Width="100" Height="70" Fill="Purple" Canvas.Top="140" Canvas.Left="90"></Ellipse>

    </Canvas>
</Window>
