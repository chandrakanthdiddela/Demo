<Window x:Class="Calculatorsample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Width="300" Height="300" Name="Grid1">
        <StackPanel>
            <TextBox  Width="150" Height="40" Margin="10" BorderBrush="AliceBlue"></TextBox>
            <UniformGrid Width="200" Height="200" Margin="10" Background="Purple" Name="unifromgrid1">
                <Button Content="1" Margin="3"></Button>
                <Button Content="2"  Margin="3"></Button>
                <Button Content="3"  Margin="3"></Button>
                <Button Content="4"  Margin="3"></Button>
                <Button Content="5"  Margin="3"></Button>
                <Button Content="6"  Margin="3"></Button>
                <Button Content="7"  Margin="3"></Button>
                <Button Content="8"  Margin="3"></Button>
                <Button Content="9"  Margin="3"></Button>
                <Button Content="0"   Margin="3"></Button>
                <Button Content="+"  Margin="3"></Button>
                <Button Content="-"  Margin="3"></Button>
                <Button Content="%"  Margin="3"></Button>
                <Button Content="/"  Margin="3"></Button>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
