<Window x:Class="AdditionalLayout.TabControldemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TabControldemo" Height="300" Width="300">
    <Grid>
        <TabControl>
            
            <TabItem Header="1">
                <StackPanel>
                    <Button>b1</Button>
                    <Button>b2</Button>
                    <Button>b3</Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="2">
                <StackPanel>
                <RadioButton>R1</RadioButton>
                <RadioButton>R2</RadioButton>
                <RadioButton>R3</RadioButton>
                </StackPanel>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
